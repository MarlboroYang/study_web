<h1>看板列表</h1>


<%= link_to "新增看板", new_board_path %>
<h2><i class="fas fa-fire-alt"></i></h2>


<ul>
<% @boards.each do |board| %>
<li>
<%= link_to "編輯", edit_board_path(board) %>
<%= link_to "刪除", board, 
                  method: 'delete',
                  data: { confirm: '是否確定刪除？' }%>
<%= link_to board.title, board %>
</li>
<% end%>
</ul>

  
  